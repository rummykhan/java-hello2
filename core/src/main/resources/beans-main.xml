<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       https://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="org.example.car" />

    <bean id="engine" class="org.example.car.Engine">
        <constructor-arg name="serialNumber" value="1022"/>
        <property name="context" value="100101"/>
    </bean>

    <bean id="car" class="org.example.car.Car">
        <property name="name" value="Toyota Camry"/>
        <property name="model" value="2013"/>
        <property name="make" value="Japan"/>
        <property name="tyres">
            <list>
                <ref bean="tyre"/>
                <ref bean="tyre"/>
                <ref bean="tyre"/>
                <ref bean="tyre"/>
            </list>
        </property>
    </bean>

    <bean id="tyre" class="org.example.car.Tyre">
        <property name="name" value="Mitchlen"/>
        <property name="year" value="2019"/>
        <property name="goodYear" value="3"/>
    </bean>

</beans>